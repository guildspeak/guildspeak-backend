{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "lib": [
            "es2017",
            "esnext"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
